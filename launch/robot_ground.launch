<launch>
    <!-- Parameter: robot id -->
    <arg name="robot_id" default="1" />
    
    <group ns="robot$(arg robot_id)">
        <node name="groundrobot_node" pkg="elikos_roomba" type="groundrobot_node" output="screen">
            <param name="robot_id" value="$(arg robot_id)" />
        </node>
    </group>
</launch>